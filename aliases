# Unix
alias ll="ls -al"
alias ln="ln -v"
alias ldots="ls -ld ~/.*"

alias e="$EDITOR"
alias v="$VISUAL"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# More Customizations
alias weather="curl wttr.in/~Brooklyn,NY"

alias nvim=/Users/cds/dev/nvim/nvim-osx64/bin/nvim
alias vi=/Users/cds/dev/nvim/nvim-osx64/bin/nvim

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
